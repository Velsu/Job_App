#jobs
	.job
		%h2= @job.title
		%p= @job.description
		%p= @job.company
		= link_to "Apply for the Job", @job.url, class: "button btn btn-warning"

=link_to "Home", root_url, class: "btn btn-default"
=link_to "Edit", edit_job_path(@job), class: "btn btn-default"
=link_to "Delete", @job, method: :delete, data: {confirm: "Are You sure?"}, class: "btn btn-danger"