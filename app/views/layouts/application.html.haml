%html
%head
	%title TodoApp
	= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags
	= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Lato:300,400,700"
	= stylesheet_link_tag "http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css"

%body
.nav.navbar.navbar-default
	.container
		.navbar-brand Job Board
		%ul.nav.navbar-nav
			%li= link_to "All", jobs_path
			- Category.all.each do |category|
				%li= link_to category.name, jobs_path(category: category.name)
		= link_to "New Job", new_job_path, class: "navbar-text navbar-right navbar-link"

	

.container.col-md-6.col-md-offset-3
	= yield

